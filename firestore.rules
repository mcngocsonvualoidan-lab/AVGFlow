rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check auth
    function isAuthenticated() {
      return request.auth != null;
    }

    // Existing Rules (Keep them)
    match /users/{userId} {
      allow read: if true; 
      allow write: if isAuthenticated();
    }
    match /tasks/{taskId} {
      allow read, write: if true; 
    }
    match /logs/{logId} {
      allow read, write: if true; 
    }
    match /notifications/{nId} {
      allow read, write: if true; 
    }
    match /wishes/{wId} {
      allow read, write: if true; 
    }
    match /events/{eId} {
      allow read, write: if true; 
    }
    match /payroll/{pId} {
      allow read, write: if true; 
    }
    match /meetings/{mId} {
      allow read, write: if true; 
    }
    match /conclusion_docs/{docId} {
      allow read, write: if true;
    }
    match /conclusion_votes/{voteId} {
      allow read, write: if true;
    }
    match /ai_conversations/{docId} {
        allow read, list, create, update, delete: if resource.data.userId == request.auth.uid || request.resource.data.userId == request.auth.uid;
    }
    match /ai_app_history/{docId} {
        allow read, list, create, update, delete: if resource.data.userId == request.auth.uid || request.resource.data.userId == request.auth.uid;
    }
    match /system/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); // Should be admin only in prod
    }

    // Rules for Email Extension
    match /mail/{mailId} {
      allow read, write: if isAuthenticated();
    }

    // --- INTERNAL CHAT RULES ---
    
    // --- INTERNAL NEWS RULES ---
    match /internal_news/{newsId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); // UI restricts creation to admins
    }

    // --- INTERNAL CHAT RULES ---
    
    // Chat Metadata (Rooms)
    match /chats/{chatId} {
      allow read: if isAuthenticated() && (request.auth.uid in resource.data.participants);
      allow create: if isAuthenticated() && (request.auth.uid in request.resource.data.participants);
      allow update: if isAuthenticated() && (request.auth.uid in resource.data.participants);
      allow delete: if request.auth != null && 
        resource.data.participants.hasAny([request.auth.uid]) && 
        (resource.data.type == 'direct' || resource.data.createdBy == request.auth.uid); 
    }

    // Messages Subcollection
    match /chats/{chatId}/messages/{messageId} {
       allow read: if isAuthenticated() && (request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants);
       allow create: if isAuthenticated() && (request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants);
       // Allow update for reactions and read status (any participant can update)
       allow update: if isAuthenticated() && (request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants);
       allow delete: if isAuthenticated() && (request.auth.uid == resource.data.senderId);
    }
  }
}
